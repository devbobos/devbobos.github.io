---
layout: null
---
<feed xmlns="http://webmastertool.naver.com">
  <id>{{- '/' | absolute_url -}}</id><!-- 피드 문서를 담고있는 카테고리 URL -->
  <title>Syndication Document</title><!-- 피드 문서를 나타내는 제목 -->
  <author><!-- 작성자 정보 -->
    <name>{{- site.author -}}</name>
    <url>{{- '/' | absolute_url -}}</url>
    <email>{{- site.email -}}</email>
  </author>
  <updated>{{- site.time | date_to_xmlschema -}}</updated><!-- 신디케이션 문서 작성 시간 -->
  <link rel="site" href="{{- '/' | absolute_url -}}" title="{{- site.name -}}"/><!-- 웹사이트 정보 -->
  <!-- 포스팅 정보 (최대 100개, 50MB 이하로 제한) -->
  {% for post in site.posts limit:100 %}
  <entry>
    <id>
      {{ post.url | prepend: site.baseurl | prepend: site.url }}
    </id>
    <title>
      <![CDATA[ {{ post.title | xml_escape }} ]]>
    </title>
    <author>
      <name>{{- site.author -}}</name>
    </author>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <link rel="via" href="{{- '/' | absolute_url -}}" title="{{- site.name -}}"/>
    <content type="html">
    <![CDATA[
    {{ post.content | xml_escape }}
    ]]>
    </content>
    <summary type="text">
    <![CDATA[
    {%- capture _excerpt -%}{{- post.excerpt | strip_html | truncatewords: 100 -}}{%- endcapture -%}
    ]]>
    </summary>
    {% assign flag = "null" %}
    {% for tag in post.tags %}
      {% if tag == "Android" %}
        {% assign flag = "Android" %}
        {% break %}
      {% elsif tag == "iOS" %}
        {% assign flag = "iOS" %}
        {% break %}
      {% elsif tag == "GoogleAppExcellence" %}
        {% assign flag = "GoogleAppExcellence" %}
        {% break %}
      {% elsif tag == "Unity" %}
        {% assign flag = "Unity" %}
        {% break %}
      {% elsif tag == "Web" %}
        {% assign flag = "Web" %}
        {% break %}
      {% endif %}
    {% endfor %}
    <category term="{{ flag | slugify }}" label="{{- flag -}}"/>
  </entry>
  {%- endfor -%}
  <!-- 삭제된 포스팅 정보 -->
  <!--
  <deleted-entry ref="http://www.syndi-example.com/bbs/board.php?bo_table=search_info&id=11" when="2016-06-26T00:10:05+09:00"/>
  -->
</feed>
